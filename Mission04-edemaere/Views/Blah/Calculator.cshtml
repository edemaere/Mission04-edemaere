@{
    ViewData["Title"] = "Grade Calculator - Cool Site";
}

@model Mission04_edemaere.Models.Calculator


<h2>Grade Calculator</h2>
<p>Enter your percentages for each category to calculate a total percentage and a letter grade!</p>
<br />

<div class="row">
    <div class="column">
        <h4>Grade Percentages</h4>
        <p>Enter just the number (don't include a "%" sign)</p>

        <form method="post">
            <label asp-for="Assignments">Assignments:</label>
            <input asp-for="Assignments" /> <br />

            <label asp-for="GrpProject">Group Project:</label>
            <input asp-for="GrpProject" /> <br />

            <label asp-for="Quizzes">Quizzes:</label>
            <input asp-for="Quizzes" /> <br />

            <label asp-for="Midterm">Midterm Exam:</label>
            <input asp-for="Midterm" /> <br />

            <label asp-for="Final">Final Exam:</label>
            <input asp-for="Final" /> <br />

            <label asp-for="Intex">INTEX:</label>
            <input asp-for="Intex" /> <br />

            <button type="submit">Submit</button>
            <br /><br />

            <div asp-validation-summary="All"></div>
        </form>
    </div>
    <div class="column">
        <h4>Results</h4>
        <label>Overall Percent:</label>
        <label style="font-weight:bold;">@Model.overallPercent%</label>
        <br />
        <label>Letter Grade: </label>
        <label style="font-weight:bold;">@Model.letterGrade</label>
    </div>
</div>

<script src="js/GradeCalc.js"></script>